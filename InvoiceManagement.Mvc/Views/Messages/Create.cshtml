@model EntityLayer.Concrete.Message 
 
<div class="row container d-flex justify-content-center">
    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body"> 
         <form asp-action="Create" asp-controller="Messages" method="post" autocomplete="off"> 
            <div class="form-group row">
            <label asp-for="User.Email" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">
                <input asp-for="User.Email" class="form-control"  id="User.Email" placeholder="Gönderen">
            </div>
            </div>
            <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input  asp-for="Subject" class="form-control" id="Subject" placeholder="Konu">
            </div>
            </div> 
            <div class="form-group row">
            <label asp-for="Messages" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Messages" class="form-control" id="Messages" placeholder="Mesaj">
            </div>
            </div>   
            <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>