@model EntityLayer.Concrete.User 
 
<div class="row container d-flex justify-content-center">
    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body"> 
         <form asp-action="Edit" asp-controller="User" method="post" autocomplete="off">
             <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
            <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">@Model.Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" value="@Model.Name" id="Name" placeholder="UserOwnerName">
            </div>
            </div>
            <div class="form-group row">
            <label asp-for="Surname" class="col-sm-2 col-form-label">@Model.Surname</label>
            <div class="col-sm-10">
                <input  asp-for="Surname" class="form-control" id="Surname" placeholder="Surname">
            </div>
            </div> 
            <div class="form-group row">
            <label asp-for="TcNo" class="col-sm-2 col-form-label">@Model.TcNo</label>
            <div class="col-sm-10">
                <input asp-for="TcNo" class="form-control" id="TcNo" placeholder="TcNo">
            </div>
            </div> 
            <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">@Model.Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" id="Email" placeholder="Email">
            </div>
            </div> 
            <div class="form-group row">
            <label asp-for="PhoneNo" class="col-sm-2 col-form-label">@Model.PhoneNo</label>
            <div class="col-sm-10">
                <input asp-for="PhoneNo" class="form-control" id="PhoneNo" placeholder="PhoneNo">
            </div>
            </div>
            <div class="form-group row">
            <label asp-for="NumberPlate" class="col-sm-2 col-form-label">@Model.NumberPlate</label>
            <div class="col-sm-10">
                <input type="text" asp-for="NumberPlate" class="form-control" id="NumberPlate" placeholder="NumberPlate">
            </div>
            </div>   
            <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>