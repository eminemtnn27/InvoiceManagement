@model List<EntityLayer.Concrete.Dues>

<div class="row container col-md d-flex justify-content-center">
    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
         <a style="float: right;" asp-action="Create" asp-controller="Dues"   class="btn btn-outline-success"> Yeni Ekle</a>
        <h4 class="card-title">Aidatlar</h4>
        <div class="table-responsive">
            <table class="table">
            <thead>
                <tr> 
                <th> Aidat Id </th>
                <th> Aidat Sahibi </th>
                <th> Ödenecek Tutar</th>
                <th> Ödeme Tipi</th>
                <th> Son Ödeme Tarihi </th>
                <th> Fatura Kesim Tarihi </th>
                <th> Durum</th>
                <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dues in Model )
                    { <tr>
                   
                    <td>@dues.DuesId </td>
                    <td>@dues.User.Name @dues.User.Surname</td>
                    <td> @dues.DueAmount</td>
                    <td> @dues.PaymentType</td>
                    <td> @dues.DueDate</td>
                    <td> @dues.billingDate</td>
                    <td>
                        @if(@dues.Status==false)
                        {
                            <span>Ödenmedi</span>
                        }
                        else
                        {
                            <span>Ödendi</span>
                        }
                    </td>                    
                    <td>
                        <a asp-action="Edit" asp-controller="Dues" asp-route-id="@dues.DuesId"  class="btn btn-outline-success">Düzenle</a>
                        <form action="/Dues/Delete" method="post" style="display:inline;">
                        <input type="hidden" name="DuesId" value="@dues.DuesId">
                        <button type="submit"  class="btn btn-outline-danger" >Sil</button>
                            
                        </form>
                    </td> 
                </tr>    
                }               
            </tbody>
            </table> 
        </div>
        </div>
    </div>
    </div>
</div>